<%= render 'spree/admin/shared/taxes_tabs' %>

<% content_for :page_title do %>
  <%= t('spree.avalara_entity_use_codes') %>
<% end %>

<% content_for :page_actions do %>
    <li>
      <%= link_to t('spree.new_avalara_entity_use_code'), new_object_url, id: 'admin_new_avalara_entity_use_code_link' %>
    </li>
<% end %>

<table class="index" id="listing_sale_events" data-hook>
  <thead>
  <tr data-hook="admin_sale_events_index_headers">
    <th><%= t('spree.use_code') %></th>
    <th ><%= t('spree.use_code_description') %></th>
    <tH data-hook="admin_sale_events_index_header_actions"></tH>
  </tr>
  </thead>
  <tbody>
  <% @avalara_entity_use_codes.each do |use_code|%>
      <tr id="<%= dom_id use_code %>" data-hook="admin_sale_events_index_rows">
        <td><%= use_code.use_code %></td>
        <td colspan="2"><%= use_code.use_code_description %></td>
      </tr>
  <% end %>
  </tbody>
</table>
